{
  "name": "docuchat-saas-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "smoke:boot": "node scripts/smoke/boot.cjs",
    "smoke:chatbots": "node scripts/smoke/chatbots.cjs",
    "smoke:chatbots:run": "node scripts/smoke/run-chatbots.cjs",
    "smoke:ingest": "node scripts/smoke/ingest.cjs",
    "db:status": "dbmate status",
    "db:migrate": "dbmate up",
    "db:rollback": "node scripts/dbmate-guard.cjs down",
    "db:seed:admin": "tsx scripts/seed/admin.ts",
    "db:seed:smoke": "tsx scripts/seed/smoke.ts",
    "test": "turbo test"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "dbmate": "^2.18.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.2",
    "turbo": "^2.0.9",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  },
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0"
  }
}
